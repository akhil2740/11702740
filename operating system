	n1=n;
	printf("\n Enter the Timeslice \n");
 	scanf("%d",&ts);
 	for(i=1;i<=n;i++)
	{
   		printf("\n Enter the process ID %d",i);
		scanf("%d",&pid[i]);
   		printf("\n Enter the Burst Time for the process");
   		scanf("%d",&bt[i]);
   		need[i]=bt[i];
 	}
 	for(i=1;i<=n;i++)
	{
		flag[i]=1;
  		wt[i]=0;
 	}
