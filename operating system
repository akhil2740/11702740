void main()
{
char p[10][5];
int i,j,n,pr[10],pt[10],temp1,totwt=0,wt[10],n;
printf("enter no of processes:");
	scanf("%d",&n);
  for(i=0;i<n;i++)
	{
		printf("enter process%d name:",i+1);
  		scanf("%s",&p[i]);
		printf("enter process time:");
		scanf("%d",&pt[i]);
